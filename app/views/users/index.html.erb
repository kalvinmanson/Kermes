<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Name</th>
      <th>Username</th>
      <th>Birthdate</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Rank</th>
      <th>Purchases</th>
      <th>Sales</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.role %></td>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= user.birthdate %></td>
        <td><%= user.gender %></td>
        <td><%= user.phone %></td>
        <td><%= user.country %></td>
        <td><%= user.state %></td>
        <td><%= user.city %></td>
        <td><%= user.zipcode %></td>
        <td><%= user.address1 %></td>
        <td><%= user.address2 %></td>
        <td><%= user.rank %></td>
        <td><%= user.purchases %></td>
        <td><%= user.sales %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

